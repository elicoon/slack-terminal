{
  "name": "slack-terminal",
  "displayName": "Slack Terminal",
  "description": "Relay terminal commands between Slack and VS Code's integrated terminal",
  "version": "0.0.1",
  "publisher": "elicoon",
  "repository": {
    "type": "git",
    "url": "https://github.com/elicoon/slack-terminal"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "slackTerminal.connect",
        "title": "Slack Terminal: Connect"
      },
      {
        "command": "slackTerminal.disconnect",
        "title": "Slack Terminal: Disconnect"
      }
    ],
    "configuration": {
      "title": "Slack Terminal",
      "properties": {
        "slackTerminal.appToken": {
          "type": "string",
          "default": "",
          "description": "Slack App Token (xapp-...)"
        },
        "slackTerminal.botToken": {
          "type": "string",
          "default": "",
          "description": "Slack Bot Token (xoxb-...)"
        },
        "slackTerminal.allowedUserId": {
          "type": "string",
          "default": "",
          "description": "Your Slack User ID (whitelist)"
        },
        "slackTerminal.channelId": {
          "type": "string",
          "default": "",
          "description": "Slack Channel ID to listen in"
        },
        "slackTerminal.truncateAt": {
          "type": "number",
          "default": 2000,
          "description": "Character limit before sending as file attachment"
        },
        "slackTerminal.batchDelayMs": {
          "type": "number",
          "default": 500,
          "description": "Output batching interval in milliseconds"
        },
        "slackTerminal.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect on VS Code startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.x"
  },
  "dependencies": {
    "@slack/socket-mode": "^1.3.0",
    "@slack/web-api": "^6.9.0"
  }
}
